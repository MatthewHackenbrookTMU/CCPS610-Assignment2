@model EmployeeModel
@{
}

<form method="post" class="mt-4">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.EmployeeId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.FirstName" class="control-label"></label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName" class="control-label"></label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber" class="control-label"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="control-label"></label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.JobId" class="control-label"></label>
        <input asp-for="@Model.JobId" class="form-control" />
        <span asp-validation-for="@Model.JobId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Salary" class="control-label"></label>
        <input asp-for="@Model.Salary" class="form-control" />
        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CommissionPct" class="control-label"></label>
        <input asp-for="@Model.CommissionPct" class="form-control" />
        <span asp-validation-for="@Model.CommissionPct" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ManagerId" class="control-label"></label>
        <input asp-for="@Model.ManagerId" class="form-control" />
        <span asp-validation-for="@Model.ManagerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DepartmentId" class="control-label"></label>
        <input asp-for="@Model.DepartmentId" class="form-control" />
        <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="~/js/site.js" asp-append-version="true"></script>